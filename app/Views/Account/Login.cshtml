@model LoginViewModel
<div class="container take-queue">
    <h3 class="mb-4">Ro'yhatdan o'tish</h3>
    <form class="form-signin" method="post" asp-action="Login" asp-controller="Account">
        <div class="form-label-group mb-4">
            <input asp-for="Email" type="text" id="Email" class="form-control" placeholder="" required="">
            <label class="text-muted mb" asp-for="Email" for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-label-group mb-4">
            <input asp-for="Password" type="tel" id="Password" class="form-control" placeholder="" required="">
            <label class="text-muted" asp-for="Password" for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="row mx-auto">
            <button class="btn btn-lg btn-success" type="submit">Navbat olish</button>
        </div>
    </form>
</div>